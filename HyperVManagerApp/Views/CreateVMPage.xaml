<Page
    x:Class="HyperVManager.Views.CreateVMPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="创建虚拟机向导" FontSize="24" Margin="10" Grid.Row="0"/>
        <Frame x:Name="WizardFrame" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="10">
            <Button Content="上一步" x:Name="BackButton" Click="OnBackClicked" IsEnabled="False"/>
            <Button Content="下一步" x:Name="NextButton" Click="OnNextClicked"/>
        </StackPanel>
    </Grid>
</Page>