<Page
    x:Class="HyperVManager.Views.WizardStep3Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="步骤 3: 硬盘" FontSize="20" FontWeight="Bold"/>

        <RadioButton Content="创建新的虚拟硬盘" GroupName="DiskOption" IsChecked="{x:Bind ViewModel.CreateNewDisk, Mode=TwoWay}"/>
        <StackPanel Orientation="Horizontal" Spacing="10" Margin="20,0,0,0">
            <TextBlock Text="大小 (GB):" VerticalAlignment="Center"/>
            <TextBox Text="{x:Bind ViewModel.DiskSizeGB, Mode=TwoWay}" Width="100"/>
            <TextBlock Text="?" ToolTipService.ToolTip="将为虚拟机创建一个全新的、空白的虚拟硬盘文件 (.vhdx)。&#x0a;您需要在虚拟机启动后手动安装操作系统。"/>
        </StackPanel>

        <RadioButton Content="使用现有虚拟硬盘" GroupName="DiskOption" IsChecked="{x:Bind !ViewModel.CreateNewDisk, Mode=TwoWay}"/>
        <StackPanel Orientation="Horizontal" Spacing="10" Margin="20,0,0,0">
            <TextBox x:Name="ExistingDiskPathTextBox" Text="{x:Bind ViewModel.ExistingDiskPath, Mode=TwoWay}" PlaceholderText="选择现有虚拟硬盘路径" IsReadOnly="True" Width="300"/>
            <Button Content="浏览" Click="OnBrowseExistingDiskClicked"/>
            <TextBlock Text="?" ToolTipService.ToolTip="使用一个已经存在的虚拟硬盘文件 (.vhd 或 .vhdx)。&#x0a;这通常用于恢复虚拟机，或使用已预装好系统的硬盘文件。"/>
        </StackPanel>
    </StackPanel>
</Page>