<Page
    x:Class="HyperVManager.Views.SystemCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="系统状态检查" FontSize="24" Margin="0,0,0,10"/>
        <Button Content="检查 Hyper-V 状态" Click="OnCheckHyperVStatusClicked"/>
        <TextBlock x:Name="StatusTextBlock" Text="点击上方按钮检查 Hyper-V 状态..." Margin="0,10,0,0"/>
        <Button x:Name="InstallButton" Content="一键安装 Hyper-V" Click="OnInstallHyperVClicked" Visibility="Collapsed" Margin="0,10,0,0"/>
        <TextBlock x:Name="WarningTextBlock" Text="警告：安装过程需要管理员权限..." Foreground="Orange" Visibility="Collapsed"/>
    </StackPanel>
</Page>