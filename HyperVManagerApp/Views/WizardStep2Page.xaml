<Page
    x:Class="HyperVManager.Views.WizardStep2Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="步骤 2: 内存和处理器" FontSize="20" FontWeight="Bold"/>
        <TextBlock Text="内存 (MB):"/>
        <Slider x:Name="MemorySlider" Minimum="1024" Maximum="16384" Value="{x:Bind ViewModel.MemoryMB, Mode=TwoWay}" SmallChange="128" LargeChange="1024" TickFrequency="1024" IsThumbToolTipEnabled="True"/>
        <TextBlock Text="当前内存: {x:Bind ViewModel.MemoryMB, Mode=OneWay} MB"/>
        <TextBlock Text="?" ToolTipService.ToolTip="为虚拟机分配的内存大小。&#x0a;此向导目前不支持动态内存。"/>

        <TextBlock Text="CPU 核心数:" Margin="0,10,0,0"/>
        <Slider x:Name="CpuSlider" Minimum="1" Maximum="8" Value="{x:Bind ViewModel.CpuCores, Mode=TwoWay}" SmallChange="1" LargeChange="1" TickFrequency="1" IsThumbToolTipEnabled="True"/>
        <TextBlock Text="当前核心数: {x:Bind ViewModel.CpuCores, Mode=OneWay} 核"/>
        <TextBlock Text="?" ToolTipService.ToolTip="为虚拟机分配的CPU逻辑核心数量。&#x0a;建议不要超过主机物理核心数的一半。"/>
    </StackPanel>
</Page>