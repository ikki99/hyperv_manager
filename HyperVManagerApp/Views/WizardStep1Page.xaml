<Page
    x:Class="HyperVManager.Views.WizardStep1Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="10" Margin="20">
        <TextBlock Text="步骤 1: 名称和位置" FontSize="20" FontWeight="Bold"/>
        <TextBlock Text="虚拟机名称:"/>
        <TextBox x:Name="VmNameTextBox" PlaceholderText="输入虚拟机名称"/>
        <TextBlock Text="存储位置:"/>
        <TextBox x:Name="VmPathTextBox" PlaceholderText="选择虚拟机存储路径" IsReadOnly="True"/>
        <Button Content="浏览" Click="OnBrowsePathClicked"/>
        <CheckBox x:Name="SecureBootCheckBox" Content="启用安全启动" IsChecked="True"/>
        <TextBlock Text="?" ToolTipService.ToolTip="推荐用于 Windows 11 和其他现代操作系统。&#x0a;如果安装旧版系统（如 Windows 7），请取消勾选。"/>
    </StackPanel>
</Page>