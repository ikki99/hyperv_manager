<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="HyperVManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyperVManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">
    <Page.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Hyper-V 虚拟机列表" FontSize="24" Margin="10"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="10,0,10,10">
                <Button Content="刷新" Click="OnRefreshVMsClicked"/>
                <Button Content="启动" Click="OnStartVMClicked"/>
                <Button Content="关机" Click="OnShutdownVMClicked"/>
                <Button Content="强制停止" Click="OnStopVMClicked"/>
                <Button Content="删除" Click="OnDeleteVMClicked"/>
                <Button Content="连接" Click="OnConnectVMClicked"/>
                <Button Content="执行命令" Click="OnInvokeCommandInVMClicked"/>
            </StackPanel>
            <controls:DataGrid Grid.Row="2"
                               x:Name="VmDataGrid"
                               AutoGenerateColumns="False"
                               IsReadOnly="True"
                               HeadersVisibility="Column"
                               ItemsSource="{x:Bind VMs, Mode=OneWay}"
                               SelectionMode="Single"
                               SelectionChanged="OnVmDataGridSelectionChanged">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                    <controls:DataGridTextColumn Header="状态" Binding="{Binding State}" Width="Auto"/>
                    <controls:DataGridTextColumn Header="CPU 使用率" Binding="{Binding CPUUsage}" Width="Auto"/>
                    <controls:DataGridTextColumn Header="分配内存 (MB)" Binding="{Binding MemoryAssigned, Converter={StaticResource BytesToMBConverter}}" Width="Auto"/>
                    <controls:DataGridTextColumn Header="运行时间" Binding="{Binding Uptime}" Width="Auto"/>
                    <controls:DataGridTextColumn Header="客户机操作系统" Binding="{Binding GuestOS}" Width="Auto"/>
                    <controls:DataGridTextColumn Header="IP 地址" Binding="{Binding IPAddresses, Converter={StaticResource StringListConverter}}" Width="2*"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Page.Content>
</Page>
